---
import { Image } from "astro:assets";
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="flex flex-col items-start justify-between gap-1 md:mb-6 md:items-end md:text-right"
  transition:name="header"
>
  <nav class="flex flex-col items-start gap-2 md:items-end">
    <a
      href="/"
      class="flex items-start gap-3 md:flex-col md:items-end md:gap-2"
    >
      <Image
        src="/static/profile.jpg"
        alt="David Schnurr"
        width="50"
        height="50"
        class="h-7 w-7 md:h-12 md:w-12"
      />
      <div class="text-xl leading-tight">David Schnurr</div>
    </a>
    <div class="text-sm leading-tight text-zinc-500 dark:text-zinc-300">
      Software engineer working at OpenAI in San Francisco.
    </div>
    <div class="hidden text-xs text-zinc-500 md:block">
      <a href="https://x.com/_dschnurr" target="_blank" class="text-sm">X</a>
      &nbsp;/&nbsp;
      <a
        href="https://linkedin.com/in/davidschnurr"
        target="_blank"
        class="text-sm"
      >
        LinkedIn
      </a>
      &nbsp;/&nbsp;
      <a href="https://github.com/schnerd" target="_blank" class="text-sm">
        GitHub
      </a>
    </div>
  </nav>
  <div class="fixed right-2 top-2">
    <ThemeToggle />
  </div>
</header>

<style>
  a {
    @apply font-medium text-zinc-900 hover:underline dark:text-zinc-100;
  }
  nav img {
    @apply rounded-full;
  }
</style>
